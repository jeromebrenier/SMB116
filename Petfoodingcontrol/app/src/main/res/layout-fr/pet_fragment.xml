<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:minHeight="@dimen/height_pet_card"
    app:cardBackgroundColor="@color/card_background">

    <TextView
        android:id="@+id/txt_pet_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/text_margin_card_pet"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_pet_fooding_status"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/text_margin_card_pet"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="12sp"
        android:textStyle="italic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_pet_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/imv_card_pet_desc"
        android:src="@drawable/ic_launcher_foreground_2"
        app:civ_border_color="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btn_delete_pet"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/card_buttons_margin_vertical"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_highlight_off_black_24dp" />

    <TextView
        android:id="@+id/txt_pet_is_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="@dimen/card_buttons_margin_vertical"
        android:text="@string/txt_pet_card_is_owner"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</com.google.android.material.card.MaterialCardView>